@inherits LayoutComponentBase
@using DemoMud.Components
@using MudBlazor

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_theme" />
<MudSwitch @bind-Value="_isDarkMode" Color="Color.Primary" Class="ma-4" T="bool" Label="Toggle Light/Dark Mode" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudMainContent>
        <MudContainer>
            <div class="d-flex justify-center pb-8 pt-8">
                <MyNavMenu />
            </div>
            <div class="d-flex justify-center pb-8 pt-8">
                <div>@Body</div>

                <MudText Class="ma-4">This is an example text!</MudText>

            </div>
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private MudTheme _theme = new();
    private bool _isDarkMode;
}